{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*", "dev.ts", "dev.js"],
  "exclude": ["./coverage", "./dist", "node_modules"]
}
