{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "allowJs": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "./coverage",
    "./dist",
    "__test__",
    "**/*.test.ts",
    "jest.config.js",
    "eslint.config.js",
    "node_modules"
  ]
}
